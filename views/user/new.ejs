<!DOCTYPE HTML>
<html lang="en-US"><meta charset="UTF-8">
    <%- include('../templates/head', {page: 'Register'})%>
  <body>
      <h1>Sign Up</h1>
      <form class="pure-form pure-form-stacked" action="/user" method="post">
        <fieldset>
          <label>Email</label>
          <input type="email" name="email" placeholder="ab@abc.com">
          <label>Password</label>
          <input type="password" name="password"><label for="password_confirmation">Password Confirmation</label>
          <input type="password" name="password_confirmation">
          <input class="pure-button pure-button-primary" type="submit" value="register">
        </fieldset>
      </form>
    </body>
</html>
